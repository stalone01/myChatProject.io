{% extends 'base.html.twig' %}


{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Login âœ…</h1>
    <form action="{{ path('app_login')}}" method="post">
        <div>
            <label for="username">Username</label>
            <input type="text" id="username" name="_username" value="{{last_username}}" required autofocus>
        </div>
        <div>
            <label for="password">Password</label>
            <input type="password" id="password" name="_password" value="{{last_username}}" required>
        </div>
        <button type="submit">Login</button>

        {% if error %}
            <div>
                {{ error.mesageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}
    </form>
</div>
{% endblock %}
